{
  "manifest_version": 2,
  "name": "Pretty Todolist",
  "description": "Pretty Todolist",
  "version": "0.0.4",
  "icons": {
    "128": "./favicon.png"
  },
  "browser_action": {
    "default_popup": "./popup.html",
    "default_icon": "./favicon.png"
  },
  "background": {
    "scripts": ["./background.bundle.js", "./storageManager.bundle.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["storage", "contextMenus", "notifications"]
}